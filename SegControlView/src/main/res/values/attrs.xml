<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SegmentedControlView">
        <attr name="segRadius" format="dimension|reference"/>
        <attr name="segOuterColor" format="color"/>
        <attr name="segItemColor" format="color"/>
        <attr name="segTextColor" format="color"/>
        <attr name="segSelectedTextColor" format="color"/>
        <attr name="segMarginLeft" format="dimension|reference"/>
        <attr name="segMarginTop" format="dimension|reference"/>
        <attr name="segSelectedItem" format="integer"/>
        <attr name="segTextSize" format="reference"/>
        <attr name="segScrollEnable" format="boolean"/>
        <attr name="segMode">
            <enum name="Round" value="0"/>
            <enum name="Circle" value="1"/>
        </attr>
    </declare-styleable>
</resources>